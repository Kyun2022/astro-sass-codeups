---
import Button from '@/components/Button.astro';
import { buttonUrl } from '@/data/buttonUrl';
const { url } = buttonUrl[3];
---

<section class='blog top-blog'>
	<div class='blog__bgImage blog__bgImage--md-none'>
		<img src='src/assets/blog-bg.jpg' alt='海の中イメージした様子' />
	</div>
	<figure class='blog__decoration blog__decoration--md-none'>
