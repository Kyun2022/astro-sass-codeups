---
import Button from '@/components/Button.astro';
import { buttonUrl } from '@/data/buttonUrl';
const { url } = buttonUrl[7];
---

<section class='contact'>
	<figure class='contact__decoration'>
		<img src='src/icons/fishes-contact.png' alt='魚の群れの様子' />
	</figure>
	<div class='contact__inner inner'>
		<div class='contact__container'>
			<div class='contact__info'>
				<div class='contact__logo-block'>
					<figure class='contact__logo'>
						<a href='./index.html'
							><img
								src='src/icons/logo_2.png'
								alt='CodeUpsの文字、会社のロゴ'
							/></a
						>
					</figure>
				</div>
				<div class='contact__wrapper'>
					<div class='contact__map'>
						<iframe
							src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3579.40701233783!2d127.6646619769652!3d26.21596157706934!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x34e56996d05d1023%3A0x3afb03e18b00573f!2z44OR44K344OV44Kj44OD44Kv44Ob44OG44Or5rKW57iE!5e0!3m2!1sja!2sjp!4v1688297197575!5m2!1sja!2sjp'
							style='border:0;'
							allowfullscreen=''
							loading='lazy'
							referrerpolicy='no-referrer-when-downgrade'
						></iframe>
					</div>
					<ul class='contact__items'>
						<li class='contact__item'>沖縄県那覇市1-1</li>
						<li class='contact__item'>TEL:0120-000-0000</li>
						<li class='contact__item'>営業時間:8:30-19:00</li>
						<li class='contact__item'>定休日:毎週火曜日</li>
					</ul>
				</div>
			</div>
			<div class='contact__action'>
				<div class='contact__title title title--center'>
					<p class='title__text title__text--big'>contact</p>
					<h2 class='title__sub-text title__sub-text--layout'>
						お問い合わせ
					</h2>
					<p class='title__emphasis'>ご予約・お問い合わせはコチラ</p>
					<div class='title__button'>
						<Button src={url} />
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style lang='scss'>
	@use 'src/sass/_function.scss' as *;
	@use 'src/sass/_breakpoints.scss' as *;
	@use 'src/sass/_setting.scss' as *;

	.contact {
		position: relative;
		padding: rem(54) 0 rem(105);
		@include mq(md) {
			padding: rem(140) 0 rem(160);
		}
	}
	.contact--campaign,
	.contact--info,
	.contact--blog,
	.contact--price,
	.contact--faq {
		margin-top: rem(26);
		padding-bottom: rem(102);
		@include mq(md) {
			margin-top: initial;
			padding-bottom: rem(160);
		}
	}
	.contact--siteMap {
		margin-top: rem(34);
		padding-bottom: rem(102);
		@include mq(md) {
			margin-top: initial;
			padding-bottom: rem(160);
		}
	}
	.contact--privacyPolicy {
		margin-top: rem(29);
		padding-bottom: rem(102);
		@include mq(md) {
			margin-top: rem(34);
			padding-bottom: rem(160);
		}
	}

	.contact--termsOfService {
		margin-top: rem(29);
		padding-bottom: rem(102);
		@include mq(md) {
			margin-top: initial;
			padding-bottom: rem(160);
		}
	}
	.contact--blog-detail {
		margin-top: rem(40);
		padding-bottom: rem(102);
		@include mq(md) {
			margin-top: initial;
			padding-bottom: rem(160);
		}
	}
	.contact--aboutUs {
		margin-top: rem(26);
		padding-bottom: rem(102);
		@include mq(md) {
			margin-top: initial;
		}
	}
	.contact__decoration {
		position: absolute;
		top: rem(54);
		right: calc(50% - min(47.9166vw, 41.875rem));
		width: rem(109);
		height: rem(50);
		z-index: 100;
		@include mq(md) {
			top: rem(98);
			right: calc(
				((100vw - rem(1440)) / 2 + rem(50)) - min(
						rem(0),
						(100vw - rem(1405)) / 2
					)
			);
			width: rem(301);
			height: rem(138);
		}
	}
	.contact__inner {
		max-width: rem(600);
		width: 100%;
	}
	.contact__decoration img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.contact__container {
		display: flex;
		flex-direction: column;
		@include mq(md) {
			flex-direction: row;
			box-shadow: rem(4) rem(4) rem(10) rgba(0, 0, 0, 0.25);
			padding: rem(80) rem(50) rem(80);
		}
	}

	.contact__info {
		padding: rem(26) rem(25) 0;
		@include mq(md) {
			padding-top: initial;
			width: 100%;
			max-width: calc((572 / 1080) * 100%);
			padding-right: rem(82);
			padding: rem(26) 0 0;
		}
	}
	.contact__logo-block {
		display: block;
		padding-bottom: rem(6);
		border-bottom: rem(1) solid $green;
	}
	.contact__logo {
		width: rem(174);
		height: rem(65);
		margin: 0 auto;
		@include mq(md) {
			width: rem(200);
			height: rem(75);
		}
	}
	.contact__logo img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.contact__wrapper {
		display: flex;
		flex-direction: column-reverse;
		margin-top: rem(16);
		@include mq(md) {
			margin-top: rem(24);
			flex-direction: row-reverse;
		}
	}

	.contact__items {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		@include mq(md) {
			width: calc((150 / 419) * 100%);
			align-items: initial;
			justify-content: initial;
		}
	}

	.contact__item {
		font-size: trm(16);
		font-family: $jp-font-family1;
		font-weight: $regular;
		line-height: calc(24 / 16);
		padding-bottom: rem(4);
	}

	.contact__map {
		margin-top: rem(10);
		position: relative;
		@include mq(md) {
			margin-left: rem(21);
			margin-top: initial;
			width: calc((273 / 419) * 100%);
		}
	}
	.contact__map::before {
		content: '';
		display: block;
		padding-top: calc((160 / 295) * 100%);
		@include mq(md) {
			padding-top: calc((148 / 273) * 100%);
		}
	}
	.contact__map iframe {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 100%;
		height: 100%;
		object-fit: cover;
	}
	.contact__action {
		margin-top: rem(41);
		@include mq(md) {
			padding-top: rem(20);
			margin-top: initial;
			width: 100%;
			max-width: calc((508 / 1080) * 100%);
			padding-left: rem(16);
			border-left: rem(1) solid $green;
			text-align: center;
		}
	}

	/*//////////////////////////////////////
.title.scssにも記載
/////////////////////////////////////*/
	.title__emphasis {
		font-size: rem(14);
		font-family: $jp-font-family1;
		font-weight: $regular;
		color: $green;
		line-height: calc(18 / 14);
		margin-top: rem(10);
		@include mq(md) {
			margin-top: rem(8);
		}
	}
	.title__button {
		margin-top: rem(40);
	}
	/*//////////////////////////////////////
終了
/////////////////////////////////////*/
</style>
