<style lang='scss'>
	@use 'src/sass/_function.scss' as *;
	@use 'src/sass/_breakpoints.scss' as *;
	@use 'src/sass/_setting.scss' as *;

	.footer {
		background-color: $green;
		padding: rem(48) 0 rem(56);
		@include mq(md) {
			padding: rem(80) 0;
		}
	}

	.footer__inner {
		display: flex;
		flex-direction: column;
		max-width: rem(500);
		@include mq(md) {
			max-width: initial;
		}
	}

	.footer__top-container {
		display: flex;
		flex-direction: column;

		@include mq(md) {
			flex-direction: row;
		}
	}

	.footer__logo {
		width: rem(120);
		height: rem(45);
		@include mq(md) {
			width: rem(200);
			height: rem(75);
		}
	}

	.footer__sns-block {
		display: flex;
		flex-direction: row;
		align-items: end;
		margin-top: rem(16);
		gap: rem(16);
		@include mq(md) {
			margin-left: rem(40);
			margin-top: initial;
			padding-bottom: rem(4);
		}
	}

	.footer__sns-facebook,
	.footer__sns-instagram {
		display: inline-block;
		width: rem(24);
		height: rem(24);
		@include mq(md) {
			width: rem(32);
			height: rem(32);
		}
	}

	.footer-menu {
		margin-top: rem(37);
		width: 100%;
		margin-right: auto;
		margin-left: auto;
		display: flex;
		@include mq(md) {
			margin-top: rem(23);
			max-width: initial;
			margin-right: initial;
			margin-left: initial;
		}
	}

	.footer-menu__container-left {
		width: 100%;
		max-width: 53%;
		padding-left: rem(25);
		@include mq(md) {
			display: flex;
			width: 100%;
			max-width: calc((540 / 1080) * 100%);
		}
	}
	.footer-menu__container-right {
		width: 100%;
		max-width: 47%;
		padding-left: rem(25);
		margin-left: rem(2);
		@include mq(md) {
			margin-left: rem(26);
			display: flex;
			width: 100%;
			max-width: calc((540 / 1080) * 100%);
		}
	}
	.footer-menu__sub-container--left1 {
		@include mq(md) {
			width: 100%;
			max-width: calc((290 / 540) * 100%);
		}
	}
	.footer-menu__sub-container--right1 {
		@include mq(md) {
			width: 100%;
			max-width: calc((250 / 540) * 100%);
		}
	}
	.footer-menu__sub-container--left2 {
		@include mq(md) {
			width: 100%;
			max-width: calc((280 / 540) * 100%);
		}
	}
	.footer-menu__sub-container--right2 {
		@include mq(md) {
			width: 100%;
			max-width: calc((220 / 540) * 100%);
		}
	}

	.footer-menu__contents:not(:first-child) {
		margin-top: rem(38);
		@include mq(md) {
			margin-top: rem(38);
		}
	}

	.footer-menu__list-name {
		font-size: rem(16);
		font-family: $jp-font-family1;
		font-weight: $bold;
		line-height: calc(18 / 16);
		color: $white;
		position: relative;
	}
	.footer-menu__list-name::before {
		content: '';
		display: inline-block;
		width: rem(18);
		height: rem(18);
		background-image: url(src/icons/starfish.png);
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;
		position: absolute;
		left: rem(-24);
	}

	.footer-menu__list-name a {
		display: block;
		width: 100%;
	}
	.footer-menu__list-name a:hover {
		opacity: 0.7;
		transition: 0.3s;
	}
	.footer-menu__list-name--space {
		margin-top: rem(38);
		@include mq(md) {
			margin-top: initial;
		}
	}

	.footer-menu__items {
		margin-top: rem(26);
		@include mq(md) {
			margin-top: rem(24);
		}
	}

	.footer-menu__item {
		margin-top: rem(23);
		font-size: rem(16);
		font-family: $jp-font-family1;
		font-weight: $regular;
		color: $white;
		line-height: calc(18 / 16);
		width: 100%;
		@include mq(md) {
			margin-top: rem(24);
		}
	}
	.footer-menu__item a {
		display: block;
	}
	.footer-menu__item a:hover {
		opacity: 0.7;
		transition: 0.3s;
	}
	.footer-menu__space {
		padding-right: rem(22);
		@include mq(md) {
			padding-right: initial;
		}
	}

	.footer__copyright {
		margin-top: rem(40);
		text-align: center;
		@include mq(md) {
			margin-top: rem(80);
		}
	}

	.footer__copyright-text {
		font-size: rem(12);
		font-family: $en-font-family1;
		font-weight: $regular;
		line-height: calc(18 / 12);
		color: $white;
		@include mq(md) {
			font-size: rem(14);
			line-height: calc(18 / 14);
		}
	}
</style>
