---
import { mvData } from '@/data/siteData';
---

<section class='mv'>
	<div class='mv__inner'>
		<!-- Swiper -->
		<div class='swiper mv__slider js-mv-slider'>
			<div class='swiper-wrapper mv__items'>
				{
					mvData.map(({ srcset, media, src, alt }) => (
						<div class='swiper-slide mv__item' type='module' src='src/js/common.js'>
							<picture>
								<source srcset={srcset} media={media} />
								<img src={src} alt={alt} />
							</picture>
						</div>
					))
				}
			</div>
		</div>
		<div class='mv__title'>
			<h2 class='mv__title-text'>DIVING</h2>
			<p class='mv__title-subtext'>into&nbsp;the&nbsp;ocean</p>
		</div>
	</div>

	<style lang='scss'>
		@use 'src/sass/_function.scss' as *;
		@use 'src/sass/_breakpoints.scss' as *;
		@use 'src/sass/_setting.scss' as *;

		.mv {
			width: 100%;
			height: 100vh;
		}
		.mv__inner {
			width: 100%;
			height: inherit;
			position: relative;
		}

		.mv__slider,
		.mv__item picture,
		.mv__item img {
			height: inherit;
		}
		.mv__item img {
			object-fit: cover;
		}
		.mv__title {
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			z-index: 10;
			text-align: center;
			width: 100%;
		}

		.mv__title-text {
			font-size: rem(40);
			font-family: $en-font-family2;
			font-weight: $regular;
			letter-spacing: 0.54em;
			text-indent: 0.54em;
			color: $white;
			line-height: calc((48 / 40) * 100%);
			@include mq(md) {
				font-size: rem(80);
				line-height: calc(100 / 80);
			}
		}
		.mv__title-subtext {
			font-size: rem(20);
			font-family: $en-font-family1;
			font-weight: $regular;
			color: $white;
			line-height: calc((33 / 20) * 100%);
		}
	</style>
</section>

