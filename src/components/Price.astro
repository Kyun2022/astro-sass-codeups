---
import Button from '@/components/Button.astro';
import { buttonUrl } from '@/data/buttonUrl';

const { url } = buttonUrl[5];
---

<section class='price top-price'>
	<div class='price__inner inner'>
		<div class='prive__title title title--center'>
			<p class='title__text'>price</p>
			<h2 class='title__sub-text'>料金一覧</h2>
		</div>
		<div class='price__container'>
			<picture class='price__images js-slideColor4'>
				<source
					srcset='src/assets/price-pc.jpg'
					media='(min-width:768px)'
				/>
				<img
					src='src/assets/price-sp.jpg'
					alt='橙色の大きな亀が泳いでいる様子'
				/>
			</picture>
			<ul class='price__menu'>
				<li class='price__items'>
					<h3 class='price__header'>ライセンス講習</h3>
					<dl class='price__item'>
						<dt class='price__label'>
							オープンウォーターダイバーコース
						</dt>
						<dd class='price__text'>&#165;50&#44;000</dd>
					</dl>
					<dl class='price__item'>
						<dt class='price__label'>
							アドバンスドオープンウォーターコース
						</dt>
						<dd class='price__text'>&#165;60&#44;000</dd>
					</dl>
					<dl class='price__item'>
						<dt class='price__label'>レスキュー＋EFRコース</dt>
						<dd class='price__text'>&#165;70&#44;000</dd>
					</dl>
				</li>
				<li class='price__items'>
					<h3 class='price__header'>体験ダイビング</h3>
					<dl class='price__item'>
						<dt class='price__label'>ビーチ体験ダイビング(半日)</dt>
						<dd class='price__text'>&#165;7&#44;000</dd>
					</dl>
					<dl class='price__item'>
						<dt class='price__label'>ビーチ体験ダイビング(1日)</dt>
						<dd class='price__text'>&#165;14&#44;000</dd>
					</dl>
					<dl class='price__item'>
						<dt class='price__label'>ボート体験ダイビング(半日)</dt>
						<dd class='price__text'>&#165;10&#44;000</dd>
					</dl>
					<dl class='price__item'>
						<dt class='price__label'>ボート体験ダイビング(1日)</dt>
						<dd class='price__text'>&#165;18&#44;000</dd>
					</dl>
				</li>
				<li class='price__items'>
					<h3 class='price__header'>ファンダイビング</h3>
					<dl class='price__item'>
						<dt class='price__label'>ビーチダイビング(2ダイブ)</dt>
						<dd class='price__text'>&#165;14&#44;000</dd>
					</dl>
					<dl class='price__item'>
						<dt class='price__label'>ボートダイビング(2ダイブ)</dt>
						<dd class='price__text'>&#165;18&#44;000</dd>
					</dl>
					<dl class='price__item'>
						<dt class='price__label'>
							スペシャルダイビング(2ダイブ)
						</dt>
						<dd class='price__text'>&#165;24&#44;000</dd>
					</dl>
					<dl class='price__item'>
						<dt class='price__label'>ナイトダイビング(1ダイブ)</dt>
						<dd class='price__text'>&#165;10&#44;000</dd>
					</dl>
				</li>
				<li class='price__items'>
					<h3 class='price__header'>スペシャルダイビング</h3>
					<dl class='price__item'>
						<dt class='price__label'>貸切ダイビング(2ダイブ)</dt>
						<dd class='price__text'>&#165;24&#44;000</dd>
					</dl>
					<dl class='price__item'>
						<dt class='price__label'>1日ダイビング(3ダイブ)</dt>
						<dd class='price__text'>&#165;32&#44;000</dd>
					</dl>
				</li>
			</ul>
		</div>
		<div class='price__button'>
			<Button src={url} />
		</div>
	</div>
	<figure class='price__decoration price__decoration--md-none'>
		<img src='src/icons/fishes-left.png' alt='魚の群れの様子' />
	</figure>
</section>

<style lang='scss'>
	@use 'src/sass/_function.scss' as *;
	@use 'src/sass/_breakpoints.scss' as *;
	@use 'src/sass/_setting.scss' as *;

	.top-price {
		margin-top: rem(84);
		padding: rem(80) 0 rem(85);
		background-color: $green2;
		@include mq(md) {
			margin-top: rem(144);
			padding: rem(101) 0 rem(105);
			position: relative;
		}
	}

	.price__inner {
		height: 100%;
		max-width: rem(600);
		width: 100%;
	}

	.price__container {
		display: flex;
		flex-direction: column;
		margin-top: rem(28);
		@include mq(md) {
			margin-top: rem(40);
			flex-direction: row-reverse;
		}
	}

	.price__images {
		position: relative;
		@include mq(md) {
			margin-left: rem(93);
			width: 100%;
			max-width: calc((492 / 987) * 100%);
		}
	}
	.price__images::before {
		content: '';
		display: block;
		padding-top: calc((227 / 345) * 100%);
		@include mq(md) {
			padding-top: calc((746 / 492) * 100%);
		}
	}
	.price__images img {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.price__menu {
		margin-top: rem(40);
		@include mq(md) {
			margin-top: initial;
			width: 100%;
			max-width: calc((492 / 987) * 100%);
		}
	}

	.price__items:not(:first-child) {
		margin-top: rem(40);
	}

	.price__header {
		font-size: rem(16);
		font-family: $jp-font-family1;
		font-weight: $bold;
		line-height: calc(24 / 16);
		padding-bottom: rem(3);
		border-bottom: rem(1) solid $green;
	}

	.price__item {
		display: flex;
		margin-top: rem(8);
	}

	.price__label {
		font-size: rem(14);
		font-weight: $regular;
		font-family: $jp-font-family1;
		line-height: calc(24 / 14);
		width: calc((280 / 345) * 100%);
		@include mq(md) {
			font-size: rem(16);
			line-height: calc(24 / 16);
		}
	}

	.price__text {
		font-size: rem(14);
		font-weight: $regular;
		font-family: $jp-font-family1;
		line-height: calc(24 / 14);
		width: calc((80 / 345) * 100%);
		text-align: right;
		@include mq(md) {
			font-size: rem(16);
			line-height: calc(24 / 16);
		}
	}

	.price__button {
		margin-top: rem(40);
		text-align: center;
		@include mq(md) {
			margin-top: rem(78);
		}
	}

	.price__decoration {
		position: absolute;
		left: calc(50% - min(47.9166vw, 38.75rem));
		bottom: rem(60);
		width: rem(437);
		height: rem(201);
	}
	.price__decoration--md-none {
		display: none;
		@include mq('md') {
			display: block;
		}
	}
	.price__decoration img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}
</style>
