---
import BaseHead from '@layouts/BaseHead.astro';
import Loding from '@components/Loding.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';

import '@/sass/_base.scss';
import '@/sass/_reset.scss';
import '@/sass/_function.scss';
import '@/sass/_breakpoints.scss';
import '@/sass/_setting.scss';
---

<html lang='ja'>
	<BaseHead {...Astro.props} />
	<body class='js-fixed'>
		<Loding />
		<Header />
		<main>
			<slot />
		</main>
		<Footer />

		<div id='pageTop'><a href='./index.html'></a></div>

		<script src='src/script/common.js'></script>

		<style lang='scss'>
			@use 'src/sass/_function.scss' as *;
			@use 'src/sass/_breakpoints.scss' as *;
			@use 'src/sass/_setting.scss' as *;

			/* ローディング時にスクロールさせない */
			.js-fixed {
				width: 100%;
				height: 100%;
				position: fixed;
			}
		</style>
	</body>
</html>
